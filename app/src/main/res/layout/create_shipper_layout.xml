<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context=".SignInActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtNameShipper"
            android:hint="Name Shipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/background_dark"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:inputType="text"
            app:met_baseColor="@android:color/background_dark"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/background_dark"
            app:met_singleLineEllipsis="true"/>

        <EditText
            android:id="@+id/edtPhoneShipper"
            android:hint="Phone Shipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/background_dark"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:inputType="phone"
            android:maxLength="12"
            android:singleLine="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPasswordShipper"
            android:hint="Password Shipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/background_dark"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:inputType="textPassword"
            app:met_baseColor="@android:color/background_dark"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/background_dark"
            app:met_singleLineEllipsis="true"/>


    </LinearLayout>


</RelativeLayout>